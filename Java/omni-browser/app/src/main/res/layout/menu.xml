<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear_bg"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:orientation="horizontal">
		<LinearLayout
			android:id="@+id/linear_content"
			android:layout_width="match_parent"
			android:layout_height="350dp"
			android:padding="8dp"
			android:background="#424242"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="vertical"
			android:weightSum="10">
			<LinearLayout
				android:id="@+id/linear2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:layout_weight="2">
				<ImageView
					android:id="@+id/logo"
					android:focusable="false"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/logo2"
					android:scaleType="centerInside"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:weightSum="3"
				android:layout_weight="6">
				<LinearLayout
					android:id="@+id/linear5"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:paddingTop="5dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical"
					android:layout_weight="1">
					<Button
						android:id="@+id/m_item1"
						android:focusable="false"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:padding="5dp"
						android:background="@drawable/ic_description_white"
						android:textSize="12sp"
						android:textColor="#000000"/>
					<TextView
						android:id="@+id/textview1"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="5dp"
						android:text="View Source"
						android:textSize="10sp"
						android:textStyle="bold"
						android:textColor="#FF7043"/>
					<LinearLayout
						android:id="@+id/linear8"
						android:layout_width="match_parent"
						android:layout_height="25dp"
						android:padding="8dp"
						android:orientation="horizontal"/>
					<Button
						android:id="@+id/m_item4"
						android:focusable="false"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:padding="5dp"
						android:background="@drawable/ic_star_white"
						android:textSize="12sp"
						android:textColor="#000000"/>
					<TextView
						android:id="@+id/textview2"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="5dp"
						android:text="Bookmark"
						android:textSize="10sp"
						android:textStyle="bold"
						android:textColor="#FF7043"/>
					<LinearLayout
						android:id="@+id/linear11"
						android:layout_width="match_parent"
						android:layout_height="25dp"
						android:padding="8dp"
						android:orientation="horizontal"/>
					<Button
						android:id="@+id/m_item7"
						android:focusable="false"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:padding="8dp"
						android:background="@drawable/ic_info_outline_white"
						android:textSize="12sp"
						android:textColor="#000000"/>
					<TextView
						android:id="@+id/textview8"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="5dp"
						android:text="About"
						android:textSize="10sp"
						android:textStyle="bold"
						android:textColor="#FF7043"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear6"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:paddingTop="5dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical"
					android:layout_weight="1">
					<Button
						android:id="@+id/m_item2"
						android:focusable="false"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:padding="5dp"
						android:background="@drawable/ic_share_white"
						android:textSize="12sp"
						android:textColor="#000000"/>
					<TextView
						android:id="@+id/textview3"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="5dp"
						android:text="Share"
						android:textSize="10sp"
						android:textStyle="bold"
						android:textColor="#FF7043"/>
					<LinearLayout
						android:id="@+id/linear9"
						android:layout_width="match_parent"
						android:layout_height="25dp"
						android:padding="8dp"
						android:orientation="horizontal"/>
					<Button
						android:id="@+id/m_item5"
						android:focusable="false"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:padding="5dp"
						android:background="@drawable/ic_settings_white"
						android:textSize="12sp"
						android:textColor="#000000"/>
					<TextView
						android:id="@+id/textview4"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="5dp"
						android:text="Setting"
						android:textSize="10sp"
						android:textStyle="bold"
						android:textColor="#FF7043"/>
					<LinearLayout
						android:id="@+id/linear12"
						android:layout_width="match_parent"
						android:layout_height="25dp"
						android:padding="8dp"
						android:orientation="horizontal"/>
					<Button
						android:id="@+id/m_item8"
						android:focusable="false"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:padding="8dp"
						android:background="@drawable/ic_desktop_mac_white"
						android:textSize="12sp"
						android:textColor="#000000"/>
					<TextView
						android:id="@+id/textview10"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="5dp"
						android:text="Desktop View"
						android:textSize="10sp"
						android:textStyle="bold"
						android:textColor="#FF7043"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear7"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:paddingTop="5dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical"
					android:layout_weight="1">
					<Button
						android:id="@+id/m_item3"
						android:focusable="false"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:padding="5dp"
						android:background="@drawable/ic_https_white"
						android:textSize="12sp"
						android:textColor="#000000"/>
					<TextView
						android:id="@+id/textview5"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="5dp"
						android:text="Lock"
						android:textSize="10sp"
						android:textStyle="bold"
						android:textColor="#FF7043"/>
					<LinearLayout
						android:id="@+id/linear10"
						android:layout_width="match_parent"
						android:layout_height="25dp"
						android:padding="8dp"
						android:orientation="horizontal"/>
					<Button
						android:id="@+id/m_item6"
						android:focusable="false"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:padding="5dp"
						android:background="@drawable/download"
						android:textSize="12sp"
						android:textColor="#000000"/>
					<TextView
						android:id="@+id/textview6"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="5dp"
						android:text="Download"
						android:textSize="10sp"
						android:textStyle="bold"
						android:textColor="#FF7043"/>
					<LinearLayout
						android:id="@+id/linear13"
						android:layout_width="match_parent"
						android:layout_height="25dp"
						android:padding="8dp"
						android:orientation="horizontal"/>
					<Button
						android:id="@+id/m_item9"
						android:focusable="false"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:padding="8dp"
						android:background="@drawable/ic_assignment_white"
						android:textSize="12sp"
						android:textColor="#000000"/>
					<TextView
						android:id="@+id/textview11"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="5dp"
						android:text="History"
						android:textSize="10sp"
						android:textStyle="bold"
						android:textColor="#FF7043"/>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal"
				android:layout_weight="2"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
